	<script>

        function showMap() {
            document.getElementById("map").style.display = "block";
            mapboxgl.accessToken = 'pk.eyJ1IjoiZ29kbHltaWxrIiwiYSI6ImNrZzdsMTl3cTA4ZDkyeW52MGJoM3lpd3gifQ.XKPHid2NlcXSKZOSQVcIOg';
            var map = new mapboxgl.Map({
                container: 'map',
                style: 'mapbox://styles/mapbox/streets-v11',
                center: [8, 9],
                zoom: 6
            });
        }

        function closeMap() {
            document.getElementById("map").style.display = "none";
        }
        
